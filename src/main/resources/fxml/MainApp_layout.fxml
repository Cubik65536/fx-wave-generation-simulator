<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
   <center>

            <AnchorPane fx:id="chartPane" prefHeight="120" prefWidth="370.0">
      </AnchorPane>
   </center>
   <right>

                  <AnchorPane prefWidth="279.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="270.0" spacing="15.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="270.0" spacing="10.0">
                     <children>
                        <Label text="Presets:" />
                        <ComboBox fx:id="presetComboBox" prefHeight="25.0" prefWidth="215.0" />
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <Label text="Audio:">
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin></Label>
                  <HBox alignment="CENTER" prefHeight="24.0" prefWidth="270.0">
                     <children>
                        <RadioButton fx:id="audioOffButton" mnemonicParsing="false" prefHeight="18.0" prefWidth="60.0" text="Off" />
                        <RadioButton fx:id="audioOnButton" mnemonicParsing="false" prefHeight="18.0" prefWidth="50.0" selected="true" text="On" />
                        <Separator orientation="VERTICAL" prefHeight="200.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Separator>
                        <CheckBox fx:id="showAnalyzerCheckBox" mnemonicParsing="false" text="Show Analyzer" />
                     </children>
                  </HBox>
               </children></VBox>
         </children>
      </AnchorPane>
   </right>
   <top>
      <HBox fx:id="saveBtn" alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Wave Generation Simulator">
               <font>
                  <Font name="Cambria Math" size="12.0" />
               </font>
            </Text>
            <Button mnemonicParsing="false" prefHeight="22.0" prefWidth="46.0" text="Save" />
            <Button fx:id="exportButton" mnemonicParsing="false" text="Export" />
            <Button fx:id="importButton" mnemonicParsing="false" text="Import" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="5.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" layoutY="-10.0" prefHeight="190.0" prefWidth="754.0" spacing="10.0">
               <VBox alignment="TOP_CENTER" prefHeight="180.0" prefWidth="660.0">
                  <children>
                     <HBox alignment="CENTER" prefHeight="45.0" prefWidth="606.0" spacing="10.0">
                        <children>
                           <Button fx:id="pauseButton" mnemonicParsing="false" text="Pause" />
                           <Button fx:id="playButton" mnemonicParsing="false" text="Play" />
                           <Button fx:id="stepButton" mnemonicParsing="false" text="Step" />
                        </children>
                     </HBox>
                     <TableView fx:id="addedWavesTableView" prefHeight="132.0" prefWidth="660.0">
                        <columns>
                           <TableColumn fx:id="typeColumn" prefWidth="126.0" text="Type" />
                           <TableColumn fx:id="frequencyColumn" prefWidth="150.0" text="Frequency (Hz)" />
                           <TableColumn fx:id="amplitudeColumn" prefWidth="138.0" text="Amplitude" />
                           <TableColumn fx:id="currentAmplitudeColumn" prefWidth="245.0" text="Current Amplitude" />
                        </columns>
                     </TableView>
                  </children>
               </VBox>
               <VBox alignment="CENTER" prefHeight="190.0" prefWidth="97.0" spacing="20.0">
                  <children>
                     <Button fx:id="addWave" mnemonicParsing="false" text="AddWave" />
                     <Button fx:id="removeWave" mnemonicParsing="false" text="RemoveWave" />
                  </children>
               </VBox>
            </HBox>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
